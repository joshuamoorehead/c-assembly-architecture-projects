//written by Joshua Moorehead   

#include <iostream>

using namespace std;

int main(int argc, char **argv) {
	int num = 0;
	int mask = 1; //mask used for bitwise operations to probe out bits
	int bitArray[32];
	cout << "Enter int: ";
	cin >> num;
	cout << "You entered " << num << endl; //need to make a mask and essentially one bit at a time and them with the mask and then shift the mask over a bit left using a for loop 

	for (int i = 0; i < sizeof(int) * 8; i++) {
		bitArray[i] = ((mask & num) / mask);
		mask <<= 1; //overloaded operator and is not used for output. the compiler sees the assignment operator and numbers and is used as a shift operator

	}
	cout << "In binary: ";

	for (int j = 31; j < sizeof(int) * 8; j--) //need a decrement operator to print out array in correct order
			{
		cout << bitArray[j];
	}
	cout << endl;
	return (0);
}

